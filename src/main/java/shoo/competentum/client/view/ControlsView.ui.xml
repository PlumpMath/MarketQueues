<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"

             xmlns:b3="urn:import:org.gwtbootstrap3.extras.slider.client.ui"
        >
    <g:HorizontalPanel>

        <b:Container fluid="true" width="960px">

            <b:Row>
                <b:Column size="MD_3">
                    <b:Row>
                        <b:Column size="MD_12">
                            <g:Label>Число касс:</g:Label>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="MD_12">
                            <b3:Slider width="100px" ui:field="numCounters" min="1" max="7" step="1"/>
                        </b:Column>
                    </b:Row>

                </b:Column>
                <b:Column size="MD_3">
                    <b:Row>
                        <b:Column size="MD_12">
                            <g:Label>Число шагов:</g:Label>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="MD_12">
                            <b3:Slider width="100px" value="100.0" ui:field="numSteps" min="1" max="150" step="1"/>
                        </b:Column>
                    </b:Row>
                </b:Column>
                <b:Column size="MD_3">
                    <b:Row>
                        <b:Column size="MD_12">
                            <g:Label>Состав:</g:Label>

                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="MD_12">
                            <b3:Slider width="100px" value="33.0" ui:field="malePrc" min="0" max="100" step="1"/>
                            <b.html:Br/>
                            <b.html:Br/>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="MD_12">
                            <b3:Slider width="100px" value="33.0" ui:field="femalePrc" min="0" max="100" step="1"/>
                            <b.html:Br/>
                            <b.html:Br/>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="MD_12">
                            <b3:Slider width="100px" enabled="false" value="34.0" ui:field="childrenPrc" min="0" max="100" step="1"/>

                        </b:Column>
                    </b:Row>
                </b:Column>
                <b:Column size="MD_3">
                    <b:Button type="PRIMARY"  ui:field="launchButton">Показать</b:Button>
                </b:Column>
            </b:Row>
        </b:Container>


    </g:HorizontalPanel>
</ui:UiBinder>