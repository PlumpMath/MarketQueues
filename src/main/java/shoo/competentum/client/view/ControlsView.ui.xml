<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >
    <g:HorizontalPanel>

        <g:VerticalPanel>

            <g:VerticalPanel>
                <g:HorizontalPanel>
                    <g:VerticalPanel>
                        <g:HorizontalPanel>
                            <g:Label>Число касс:</g:Label>
                        </g:HorizontalPanel>
                    </g:VerticalPanel>
                    <g:VerticalPanel>
                        <g:HorizontalPanel>
                            <g:TextBox  ui:field="numCounters" text="3"/>
                        </g:HorizontalPanel>
                    </g:VerticalPanel>

                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:VerticalPanel>
                        <g:HorizontalPanel>
                            <g:Label>Число шагов:</g:Label>
                        </g:HorizontalPanel>
                    </g:VerticalPanel>
                    <g:VerticalPanel>
                        <g:HorizontalPanel>
                            <g:TextBox ui:field="numSteps" text="50" />
                        </g:HorizontalPanel>
                    </g:VerticalPanel>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:VerticalPanel>
                        <g:HorizontalPanel>
                            <g:Label>Состав:</g:Label>

                        </g:HorizontalPanel>
                    </g:VerticalPanel>
                    <g:VerticalPanel>
                        <g:HorizontalPanel>
                            <g:TextBox   ui:field="malePrc"  text="33"/>
                        </g:HorizontalPanel>
                    </g:VerticalPanel>
                    <g:VerticalPanel>
                        <g:HorizontalPanel>
                            <g:TextBox   ui:field="femalePrc" text="33"/>
                        </g:HorizontalPanel>
                    </g:VerticalPanel>
                    <g:VerticalPanel>
                        <g:HorizontalPanel>
                            <g:TextBox  enabled="false" ui:field="childrenPrc" text="33"/>

                        </g:HorizontalPanel>
                    </g:VerticalPanel>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Button   ui:field="launchButton">Показать</g:Button>
                </g:HorizontalPanel>
            </g:VerticalPanel>
        </g:VerticalPanel>


    </g:HorizontalPanel>
</ui:UiBinder>