<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

    <ui:style>
        body {
            font-family: sans-serif;
            padding: 2em 3em 0px;
        }
        button {
            color: rgb(255, 255, 255);
            border-color: rgb(53, 126, 189);
            display: inline-block;
            padding: 6px 12px;
            margin-bottom: 0px;
            font-size: 14px;
            font-weight: 400;
            line-height: 1.42857;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            cursor: pointer;
            -moz-user-select: none;
            background: rgb(66, 139, 202) none;
            border: 1px solid transparent;
            border-radius: 4px;
        }
        span {
            margin-right: 5px;
        }
        .content {
            overflow-y: hidden !important;
        }
        td {
            padding: 0.5em;
        }
    </ui:style>


    <g:HTMLPanel>
        <h2>Расчет движения очереди</h2>
        <g:SimplePanel ui:field="controlsContainer"/>
        <g:ScrollPanel width="960px" styleName="{style.content}" ui:field="contentContainer"/>
    </g:HTMLPanel>


</ui:UiBinder>